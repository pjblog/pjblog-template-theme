{
  "compilerOptions": {
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2017",
    "module": "node16",
    "sourceMap": false,
    "outDir": "../dist",
    "removeComments": true,
    "isolatedModules": false,
    "noImplicitAny": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "moduleDetection": "force"
  },
  "include": [
    "."
  ]
}